{
  "name": "scss_project",
  "version": "1.0.0",
  "description": "PWD Site with SCSS",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all copy --parallel watch serve",
    "watch": "npm-run-all --parallel watch:*",
    "watch:html": "onchange 'src/*.html' -- npm run copy:html",
    "watch:js": "onchange 'src/js/*.js' -- npm run copy:js",
    "watch:sass": "sass --no-source-map --watch src/sass:public/css",
    "serve": "browser-sync start --server public --files public",
    "copy:html": "copyfiles -u 1 ./src/*.html public",
    "copy:js": "copyfiles -u 1 ./src/js/*.js public",
    "copy": "npm-run-all --parallel copy:*"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:mospolytech_fit/211-321/zhavoronkov-aleksandr/semestr_2.git"
  },
  "author": "AlexZhaba <zhaba.workwork@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "browser-sync": "^2.27.9",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "sass": "^1.49.9"
  }
}
